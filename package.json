{
  "name": "appagenda",
  "private": true,
  "version": "2.0.0",
   "description": "Aplicación de estadísticas y gestión de quincenas",
  "author": "Wilson Sanchez <harveysanch@gmail.com> <+573156226982>",
  "type": "module",
  "main": "electron/main.cjs",
   "homepage": "./",
  "build": {
    "appId": "com.wilsonsanchez.appagenda",
    "productName": "AppAgenda",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.cjs",
      "db.cjs",
      "ipcMain/**/*",
      "processors/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electronmon .\"",
    "build": "vite build",
    "start": "vite",
    "electron-dev": "vite && electron .",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-pack": "electron-builder",
    "electron": "electron ."
  },

  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "chokidar": "^4.0.3",
    "framer-motion": "^12.23.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^7.1.5",
    "recharts": "^2.15.1",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.0.6",
    "uuid": "^11.1.0",
    "vite-plugin-electron": "^0.29.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "vite": "^6.1.0"
  }
}
