{
  "name": "appagenda",
  "private": true,
  "version": "2.0.1",
  "description": "Aplicación de estadísticas y gestión de quincenas",
  "author": "Wilson Sanchez <harveysanch@gmail.com>",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "build": {
    "appId": "com.wilsonsanchez.appagenda",
    "productName": "AppAgenda",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.cjs",
      "electron/db.cjs",
      "electron/ipcMain/ipcMain.cjs",
      "electron/controller/**/*.cjs",
      "electron/controller/processors/**/*.cjs",
      "electron/models/**/*.cjs"
    ],
    "extraResources": [
      {
        "from": "electron/models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "compression": "normal",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "dist/notebook.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AppAgenda",
      "installerIcon": "dist/notebook.ico",
      "uninstallerIcon": "dist/notebook.ico",
      "installerHeaderIcon": "dist/notebook.ico"
    },
    "extraMetadata": {
      "main": "electron/main.cjs"
    }
  },
  "scripts": {
    "dev": "vite && electronmon .",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "electron": "electron .",
    "electron-pack": "electron-builder",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "clean": "rm -rf dist dist-electron node_modules/.cache",
    "fresh": "npm run clean && npm install && npm run dist",
    "postinstall": "electron-builder install-app-deps",
    "dist:no-sign": "npm run build && electron-builder --win --x64 --config.forceCodeSigning=false"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "framer-motion": "^12.23.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^7.1.5",
    "recharts": "^2.15.1",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tailwindcss/vite": "^4.0.6",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.0.1",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "tailwindcss": "^4.0.6",
    "vite": "^6.1.0",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^8.0.2"
  }
}
